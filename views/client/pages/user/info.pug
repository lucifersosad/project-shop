extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-12
        +box-head(pageTitle)

    if (user)
      if (user.avatar)
          img(src=user.avatar width="150px" class="mb-3")
      else
          img(src="/images/avatar.png" width="150px" class="mb-3")
      p Họ tên: <b>#{user.fullName}</b>
      p Email: <b>#{user.email}</b>
      p Số điện thoại: <b>#{user.phone}</b>

      p
        span Trạng thái: 
        span
          <b>#{user.status === "active" ? "Hoạt động": "Dừng hoạt động"}</b>